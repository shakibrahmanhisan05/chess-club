# Backend Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Connection String (required)
# For MongoDB Atlas, get this from your cluster's connection settings
MONGO_URL="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"

# Database Name (required)
DB_NAME="chess_club_db"

# CORS Origins (required for production)
# Comma-separated list of allowed origins
# Example: "https://your-frontend.vercel.app,https://your-custom-domain.com"
CORS_ORIGINS="*"

# JWT Secret (required - use a strong random string in production)
# Generate one using: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET="your_secure_random_string_here"
